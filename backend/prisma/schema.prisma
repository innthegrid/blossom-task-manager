generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ====================
// BLOSSOM DATA MODELS
// ====================

// User model - represents a person using Blossom
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  username  String?
  tasks     Task[]
  categories Category[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Blossom-themed field
  theme     String?  @default("cherry-blossom")

  @@map("users")
}

// Task model - represents a to-do item (a petal)
model Task {
  id          String   @id @default(cuid())
  title       String
  description String?
  status      String   @default("pending")
  priority    String   @default("medium")
  dueDate     DateTime?
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Blossom-themed fields
  flowerEmoji String?  @default("ðŸŒ¸")
  isBlossom   Boolean  @default(true)

  @@map("tasks")
}

// Category model
model Category {
  id        String   @id @default(cuid())
  name      String
  color     String   @default("#FFB7C5")  // Cherry blossom pink
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  tasks     Task[]
  createdAt DateTime @default(now())

  @@map("categories")
}